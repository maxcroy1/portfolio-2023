---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = 'Blog';
const posts = ['/posts/post-1/'];
---

<BaseLayout pageTitle={pageTitle}>
  <h1>Posts</h1>
  <ul>
    {
      posts.map((post, index) => (
        <li>
          <a href={post}>Post {index + 1}</a>
        </li>
      ))
    }
  </ul>
</BaseLayout>
